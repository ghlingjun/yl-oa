<%= render 'side_bar/daily_office_side_bar' %>

<h1 style="margin-top:0;">
  <%= I18n.t "activerecord.models.contract_application" %>
</h1>
<p class="subtitle">
  <%= I18n.t "views_contract_application.total_application_prompt" %>:&nbsp;
  <%= @size %>
</p>

<table border="0" cellspacing="0" cellpadding="0" class="wide notices">
  <tr>
    <th width="55%" class="la">
      <%= I18n.t 'activerecord.attributes.contract_application.contract_name' %>
    </th>
    <th width="15%" class="la">
      <%= I18n.t 'activerecord.attributes.common.state' %>
    </th>
    <th width="30%" class ="la">
      <%= I18n.t 'activerecord.attributes.application.created_at' %>
    </th>
  </tr>
  <% @contract_applications.each do |application| %>
    <tr>
      <td>
        <%= link_to application.contract_name, application, :class => "admin" %>
      </td>
      <td>
        <%= application.state_I18n %>
      </td>
      <td><%= application.created_at %></td>
    </tr>
  <% end %>
</table>

<%= render 'application/pagination', :posts =>  @contract_applications %>

<p>
  <%= link_to I18n.t('operate.new') + I18n.t("activerecord.models.contract_application"), new_contract_application_path, :class => "utility" %>
</p>
