<div>
<table border="1" width="100%">
  <tr>
    <td width="20%" class="la">
      <label>
        <%= I18n.t 'activerecord.attributes.contract_application.contract_name' %>
      </label>
    </td>
    <td width="80%" class="la"><%= application.contract_name %></td>
  </tr>

  <tr>
    <td>
      <label>
        <%= I18n.t 'activerecord.attributes.contract_application.use' %>
      </label>
    </td>
    <td><%= application.use %></td>
  </tr>

  <tr>
    <td>
      <label>
        <%= I18n.t 'activerecord.attributes.contract_application.sum' %>
      </label>
    </td>
    <td><%= application.sum %></td>
  </tr>

  <tr>
    <td>
      <label>
        <%= I18n.t 'activerecord.attributes.contract_application.reason' %>
      </label>
    </td>
    <td><%= application.reason %></td>
  </tr>

  <%if application.attachment_file.exists? %>
      <tr>
        <td>
          <label>
            <%= I18n.t 'activerecord.attributes.application.attachment_file' %>
          </label>
        </td>
        <td><%= link_to(application.attachment_file_file_name, download_application_path(application)) %></td>
      </tr>
  <%end%>


  <%= render("application/detail_state_info", :application => application) %>
</table>
</div>
